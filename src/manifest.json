{
  "name": "LGTM",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Looks good to me!",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "background",
    "notifications",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "LGTM",
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    }
  },
  "background": {
    "persistent": true,
    "scripts": [
      "javascripts/jquery.js",
      "javascripts/background.js"
    ]
  }
}
